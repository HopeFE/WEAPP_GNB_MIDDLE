<style lang="less" scoped>
.zan-row {
  button{
    border-radius: 10px;
    margin-top: 30rpx;
  }
  .button-hover{
    background-color: #3fc6c6;
    color:#fff;
  }
}
</style>

<template>
  <view class="container">
    <view class="zan-row zan-center" style="margin-top: 180rpx;">
      <text class="zan-col zan-col-24 zan-font-30 zan-c-black zan-center">选择年级</text>
      <text class="zan-col zan-col-24 zan-font-14 zan-c-gray-darker zan-center" style="margin-top: 60rpx;">数学 新人教版</text>
    </view>
    <view class="zan-row" style="margin-top: 30px;">
      <button class="zan-col zan-col-18 zan-col-offset-3 zan-btn" bindtap='_intoAddWorkbook(1)'>七年级</button>
      <button class="zan-col zan-col-18 zan-col-offset-3 zan-btn" bindtap='_intoAddWorkbook(3)'>八年级</button>
      <button class="zan-col zan-col-18 zan-col-offset-3 zan-btn" bindtap='_intoAddWorkbook(5)'>九年级</button>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'

  export default class InitGrade extends wepy.page {
    config = {
      navigationBarTitleText: '错题归纳本中学'
    }

    data = {
      name: '',
      openId: '',
      headImg: '',
      sex: ''
    }

    /** 设置用户信息 */
    _setUserInfo (user) {
      wepy.showLoading({title: '请稍候'})
      return new Promise((resolve, reject) => {
        wepy.request({
          url: 'https://mid.guinaben.com/member/infoEdit',
          method: 'POST',
          data: {
            grade: user.grade,
            name: user.name,
            openId: user.openId,
            headImg: user.headImg,
            sex: user.sex
          },
          success (res) {
            wepy.hideLoading()
            wepy.setStorageSync('User', res)
            resolve(res)
          },
          fail (err) {
            wepy.hideLoading()
            reject(err)
          }
        })
      })
    }

    methods = {
      async _intoAddWorkbook (grade) {
        await this._setUserInfo({
          grade: grade,
          name: this.name,
          openId: this.openId,
          headImg: this.headImg,
          sex: this.sex
        })
        let name = ''
        switch (grade) {
          // case '0': { name = '七年级上册'; break }
          case '1': { name = '七年级下册'; break }
          // case '2': { name = '八年级上册'; break }
          case '3': { name = '八年级下册'; break }
          // case '4': { name = '九年级上册'; break }
          case '5': { name = '九年级下册'; break }
        }
        // 获取当前年级的教材
        let textbookId = (wepy.getStorageSync('User').textbook)[Number(grade)].id
        wepy.redirectTo({ url: `/pages/init/add?grade=${grade}&name=${name}&textbookId=${textbookId}` })
      }
    }

    onLoad() {
      let self = this
      wepy.getUserInfo({
        success (res) {
          self.name = res.userInfo.nickName
          self.openId = res.userInfo.openId
          self.headImg = res.userInfo.avatarUrl
          self.sex = res.userInfo.gender
          self.$apply()
        }
      })
    }
  }
</script>
