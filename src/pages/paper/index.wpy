<script>
  import wepy from 'wepy'
  import gnbTextbookSelect from '@/components/gnb-textbookSelect'
  
  export default class PaperIndex extends wepy.page {
    config = {
      navigationBarTitleText: '资源'
    }

    data = {
      textBookList: [],
      textbook: '',
      grade: '',
      list: {
        layer: {
          new: 0,
          total: 0
        },
        special: {
          new: 0,
          total: 0
        },
        finished: {
          new: 0,
          total: 0
        },
        revise: {
          new: 0,
          total: 0
        }
      }
    }

    components = {
      gnbTextbookSelect: gnbTextbookSelect
    }

    methods = {
      _intoPage (value) {
        wepy.navigateTo({url: `/pages/paper/${value}?textbookId=${this.textbook}`})
      },

      async textbookChange (id) {
        try {
          this.list = await this._getPaper(id)
          this.$apply()
        } catch (error) {
          console.log(error)
        }
      }
    }

    _getPaper (id) {
      return new Promise((resolve, reject) => {
        wepy.request({
          url: 'https://mid.guinaben.com/resource/main',
          data: {
            textbookId: id
          },
          success (res) { resolve(res) },
          fail (err) { reject(err) }
        })
      })
    }

    onLoad() {
      let self = this
      switch (wepy.getStorageSync('gnb_middle_User').grade) {
        case '7' : { self.grade = 1; break }
        case '8' : { self.grade = 3; break }
        case '9' : { self.grade = 5; break }
      }
      this.textBookList = wepy.getStorageSync('gnb_middle_User').textbook
      this.textbook = this.textBookList[Number(this.grade)].id
      this.$apply()
    }

    async onShow() {
      this.list = await this._getPaper(this.textbook)
      this.$apply()
    }

    onShareAppMessage (res) {
      return {
        title: '各位家长，用这个记错题，速度快，用处大',
        path: '/pages/my/index'
      }
    }
  }
</script>
