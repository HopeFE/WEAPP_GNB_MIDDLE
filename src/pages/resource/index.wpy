<style lang="less">
.resourceIndex {
  .header{
    padding:10px 0 0;
    height: 25px;
  }
  .card{
    margin:15rpx;
  }
  .card__new{
    image{
      width:39rpx;
      height:52rpx;
    }
    right:3%;
