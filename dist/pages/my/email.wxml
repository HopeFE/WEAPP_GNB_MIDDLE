  </view>

        <picker bindchange="bindEmailCodeChange" value="{{emailCodeIndex}}" range="{{emailCodes}}" style="width:35%">
          <view style="width:100%;height:35px;line-height:35px;">{{emailCodes[emailCodeIndex]}}
            <text class="zan-arrow"/>
          </view>
        </picker>
      </view>
    </view>
    <view class="zan-row">
      <button class="zan-col zan-col-18 zan-col-offset-3 zan-btn zan-btn--middle {{emailDisabled ? '' : 'zan-btn--disabled'}}" open-type="getUserInfo" bindgetuserinfo="_send" disabled="{{!emailDisabled}}" style="border-radius: 5px;">
        发送
      </button>
    </view>
  </view>